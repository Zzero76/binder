import math
import random

N=1000
def f(x):
  return math.sqrt(1.-x**2)

pi=0
for i in range (N):
  xi,yi=random.random(),random.random()
  if yi<=f(xi):
    pi+=1
pi*=4/N
print(pi)



N=1000
def f(t):
  return math.exp(-t**2)

x=0.5
print(math.erf(x))

i=0
I=0
ymin=f(x)
while i<N:
  i+=1
  xi,yi=x*random.random(),ymin+(1.-ymin)*random.random()
  if yi<=f(xi):
    I+=1
I/=N
I*=x*(1.-ymin)
I+=x*ymin
I*=2./math.sqrt(math.pi)
print(I)
